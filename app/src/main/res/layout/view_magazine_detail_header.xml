<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_magazine_detail_writer"
            android:layout_marginLeft="71dp"
            android:textColor="#141414"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tv_magazine_detail_time"
                android:layout_marginLeft="71dp"
                android:textColor="#646464"
                android:textSize="8sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Texta"
                android:id="@+id/tv_magazine_place"
                android:layout_marginLeft="5dp"
                android:textColor="#646464"
                android:textSize="8sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tv_magazine_detail_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textColor="#454545"
            android:lineSpacingExtra="4dp"
            android:textSize="14sp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_magazine_detail_writer"
        android:src="@drawable/servicebi"
        android:layout_marginLeft="11dp" />

</FrameLayout>