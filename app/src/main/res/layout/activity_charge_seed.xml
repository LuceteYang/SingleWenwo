<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E46"
    tools:context="com.wenwo.wenwoandroid.ChargeSeedActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/iv_login_close"-->
            <!--android:src="@drawable/header_cancel_28x28"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_gravity="left"-->
            <!--android:layout_marginLeft="27dp" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sunflower"
            android:id="@+id/textView18"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView48"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bi_login"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/myseeds"
        android:id="@+id/textView13"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textSize="14sp"
        android:textColor="#b4b4b4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/textView11"
        android:layout_gravity="center_horizontal"
        android:textSize="50sp"
        android:layout_marginTop="6dp"
        android:textColor="#e6e6e6" />

    <RadioGroup
        android:id="@+id/shop_seed_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:button="@android:color/transparent"
            style="@style/button"
            android:text="5 seeds     ----------->      7 yuan"
            android:checked="true"
            android:id="@+id/radioButton" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:button="@android:color/transparent"
            style="@style/button"
            android:checked="true"
            android:text="10 seeds     ----------->     14 yuan"
            android:id="@+id/radioButton1" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:button="@android:color/transparent"
            style="@style/button"
            android:checked="true"
            android:text="20 seeds     ----------->      25 yuan"
            android:id="@+id/radioButton2" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:button="@android:color/transparent"
            style="@style/button"
            android:checked="true"
            android:text="40 seeds     ----------->      40 yuan"
            android:id="@+id/radioButton3" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:button="@android:color/transparent"
            style="@style/button"
            android:checked="true"
            android:text="80 seeds     ----------->      70 yuan"
            android:id="@+id/radioButton4" />
    </RadioGroup>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="충전하기"
        style="@style/button"
        android:id="@+id/btn_seed_select"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rt_shareicon"
            android:layout_gravity="right"
            android:src="@drawable/chargingseeds_20seeds_200x200"
            android:layout_marginTop="70dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView50"
            android:src="@drawable/chargingseeds_10seeds_200x200"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/imageView53"
            android:layout_alignEnd="@+id/imageView53"
            android:layout_gravity="left"
            android:layout_marginTop="70dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView49"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/chargingseeds_5seeds_200x200"
            android:layout_gravity="center_horizontal|top" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView52"
            android:layout_gravity="left|bottom"
            android:src="@drawable/chargingseeds_40seeds_200x200"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="180dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView54"
            android:layout_gravity="right|bottom"
            android:src="@drawable/chargingseeds_80seeds_200x200"
            android:layout_marginTop="180dp"
            android:layout_marginRight="30dp" />
    </FrameLayout>

</LinearLayout>
