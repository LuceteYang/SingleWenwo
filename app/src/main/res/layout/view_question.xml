<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMain"
    android:paddingTop="30dp">

    <RelativeLayout
        android:layout_width="76dp"
        android:layout_height="18dp"
        android:layout_gravity="right"
        android:background="#000000"
        android:layout_marginRight="92dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Emergency"
            android:id="@+id/text_category"
            android:textSize="10dp"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="76dp"
        android:layout_height="18dp"
        android:layout_gravity="right"
        android:layout_marginRight="11dp"
        android:background="#000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="4"
            android:id="@+id/text_vote_number"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="7dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/change_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clickview"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="18dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="#FFFFFF">
        <!--android:onClick="onGoAnswer"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/text_question_name"
            android:layout_marginLeft="71dp"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textColor="#141414" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_question"
            android:src="@drawable/myfeed_img"
            android:layout_gravity="right"
            android:foregroundGravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="11dp"
            android:layout_marginTop="11dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/text_question_name"
            android:layout_alignLeft="@+id/text_question_name"
            android:layout_alignStart="@+id/text_question_name">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/text_question_location"
                android:textColor="#646464"
                android:textSize="8sp"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_toRightOf="@+id/linearLayout"
                android:layout_toEndOf="@+id/linearLayout"
                android:layout_marginTop="2dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:id="@+id/textView32"
                android:textSize="8sp"
                android:layout_below="@+id/icon_answer"
                android:layout_toRightOf="@+id/tv_answer_level"
                android:layout_toEndOf="@+id/tv_answer_level"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/text_question_time"
                android:layout_marginTop="2dp"
                android:textColor="#646464"
                android:textSize="8sp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_question_title"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#323232"
            android:layout_marginLeft="11dp"
            android:textSize="18sp"
            android:layout_marginRight="11dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_question_context"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@+id/text_question_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="14dp"
            android:textSize="14sp"
            android:textColor="#646464"
            android:layout_marginRight="11dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#ff006e"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/status_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="#ffffff"
                android:id="@+id/text_question_accept"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="11dp"
                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/iv_view_question_profile"
        android:layout_gravity="top|left"
        android:src="@drawable/answer"
        android:layout_marginLeft="10dp" />

</FrameLayout>