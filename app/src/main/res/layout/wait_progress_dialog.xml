<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/wait_dialog"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_waiter_loader"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <com.greenfrvr.rubberloader.RubberLoaderView
        android:id="@+id/waiter_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:loaderExtraColor="@color/extra_1"
        app:loaderPrimeColor="@color/prime_1"
        app:loaderRippleMode="cycle"
        app:loaderSize="large" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:id="@+id/btn_progress_canel"
        android:layout_gravity="center_horizontal" />

</LinearLayout>